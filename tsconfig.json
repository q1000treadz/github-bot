{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext", "ES2020", "ES6", "ES2017"],
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext"
  }
}
